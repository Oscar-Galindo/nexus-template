---
/**
 * Minimalist Navigation - Black & White Design
 * Fixed nav with centered links
 */

export interface Props {
  logoUrl: string;
}

const {
  logoUrl,
} = Astro.props;
---

<header class="fixed top-0 left-0 right-0 z-50 bg-white/80 backdrop-blur-xl border-b border-neutral-100">
  <nav class="h-20 px-6 md:px-12 max-w-[1440px] mx-auto flex items-center justify-between relative">
    <!-- Logo (Left) -->
    <a href="/" class="relative z-10">
      <img
        src={logoUrl}
        alt="Online Nexus"
        class="h-10 md:h-12 invert"
      />
    </a>

    <!-- Centered Nav Links (Desktop) -->
    <div class="hidden md:flex items-center gap-8 absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2">
      <a href="#problem" class="text-sm font-medium text-neutral-500 hover:text-black transition-colors">
        The Problem
      </a>
      <a href="#solution" class="text-sm font-medium text-neutral-500 hover:text-black transition-colors">
        Solution
      </a>
      <a href="#process" class="text-sm font-medium text-neutral-500 hover:text-black transition-colors">
        Process
      </a>
      <a href="#about" class="text-sm font-medium text-neutral-500 hover:text-black transition-colors">
        About
      </a>
    </div>

    <!-- CTA Button (Right) -->
    <a
      href="#contact"
      class="px-5 py-2 bg-black text-white text-xs md:text-sm font-medium rounded-full hover:bg-neutral-800 shadow-sm hover:shadow-md transition-all relative z-10"
    >
      Confirm Fit
    </a>
  </nav>
</header>

<!-- Spacer -->
<div class="h-20" aria-hidden="true"></div>

<script>
  // Smooth scroll for anchor links
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute('href'));
      if (target) {
        target.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }
    });
  });
</script>

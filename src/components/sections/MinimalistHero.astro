---
/**
 * Minimalist Hero - Black & White Design
 * Two-column layout with Oscar photo
 */

export interface Props {
  headline: string;
  subheadline: string;
  targetAudience: string;
  imageUrl: string;
  imageCaption?: string;
}

const {
  headline,
  subheadline,
  targetAudience,
  imageUrl,
  imageCaption,
} = Astro.props;

// Split headline at "without" for line break
const [line1, line2] = headline.includes('without') 
  ? headline.split('without').map((part, i) => i === 0 ? part.trim() : 'without ' + part.trim())
  : [headline, ''];
---

<section class="w-full pt-36 pb-24 md:pt-48 md:pb-32 px-6 md:px-12 bg-white border-b border-neutral-100">
  <div class="max-w-[1440px] mx-auto">
    <div class="grid md:grid-cols-12 gap-12 items-center">
      <!-- Content Column -->
      <div class="md:col-span-7 lg:col-span-8">
        <!-- Headline -->
        <h1 class="text-5xl md:text-7xl lg:text-8xl text-black font-medium tracking-tighter leading-[1.05] mb-10">
          {line1}{line2 && <><br />{line2}</>}
        </h1>

        <!-- Subheadline -->
        <p class="text-xl md:text-2xl text-neutral-600 font-body leading-relaxed font-light mb-4">
          {subheadline}
        </p>

        <!-- Target Audience -->
        <p class="text-lg md:text-xl text-black font-medium font-body">
          {targetAudience}
        </p>
      </div>

      <!-- Image Column -->
      <div class="md:col-span-5 lg:col-span-4">
        <!-- Image Container -->
        <div class="relative w-full aspect-[3/4] md:aspect-[4/5] rounded-2xl overflow-hidden shadow-2xl border border-neutral-100">
          <img
            src={imageUrl}
            alt="Oscar Galindo"
            class="absolute inset-0 w-full h-full object-cover grayscale-[10%] hover:grayscale-0 transition-all duration-700"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-50"></div>
        </div>

        <!-- Caption (Desktop only) -->
        {imageCaption && (
          <div class="hidden md:flex mt-6 items-center justify-between">
            <div>
              <p class="text-sm font-semibold uppercase tracking-wide text-black">{imageCaption}</p>
              <p class="text-sm text-neutral-500">Founder</p>
            </div>
            <div class="h-px flex-1 bg-neutral-200 ml-4"></div>
          </div>
        )}
      </div>
    </div>
  </div>
</section>

---
/**
 * Disqualification Section
 * Who this is not for
 */

import type { DisqualifierV2 } from '@/lib/contentful';

export interface Props {
  headline: string;
  disqualifiers: DisqualifierV2[];
}

const {
  headline,
  disqualifiers,
} = Astro.props;
---

<section class="w-full py-20 px-6 md:px-12 bg-white">
  <div class="max-w-3xl mx-auto">
    <!-- Headline -->
    <h2 class="text-2xl font-medium mb-8">
      {headline}
    </h2>

    <!-- Card -->
    <div class="bg-neutral-50 rounded-xl p-8 border border-neutral-100 shadow-sm">
      <ul class="space-y-6">
        {disqualifiers.map((item) => (
          <li class="flex items-center gap-4 text-neutral-600 font-body">
            <iconify-icon icon="solar:close-circle-linear" class="text-neutral-400 shrink-0" width="20"></iconify-icon>
            <span>{item.text}</span>
          </li>
        ))}
      </ul>
    </div>
  </div>
</section>

---
/**
 * About Section - Oscar Profile
 * Two-column with photo
 */

export interface Props {
  badge: string;
  name: string;
  title: string;
  bioPrimary: string;
  bioSecondary: string;
  imageUrl: string;
}

const {
  badge,
  name,
  title,
  bioPrimary,
  bioSecondary,
  imageUrl,
} = Astro.props;
---

<section id="about" class="w-full py-24 px-6 md:px-12 bg-neutral-50 border-t border-neutral-200 scroll-mt-20">
  <div class="max-w-7xl mx-auto">
    <div class="grid md:grid-cols-12 gap-12 items-center">
      <!-- Content Column -->
      <div class="md:col-span-7">
        <!-- Capacity Badge -->
        <span class="inline-block py-1 px-3 rounded-full bg-white border border-neutral-200 text-xs font-semibold uppercase tracking-wider mb-6">
          {badge}
        </span>

        <!-- Name -->
        <h2 class="text-4xl md:text-5xl font-medium tracking-tight mb-2 text-black">
          {name}
        </h2>

        <!-- Title -->
        <p class="text-xl text-neutral-500 mb-8 font-medium">
          {title}
        </p>

        <!-- Bio Paragraph 1 (bold) -->
        <p class="text-lg text-neutral-800 font-body leading-relaxed font-medium mb-6">
          {bioPrimary}
        </p>

        <!-- Bio Paragraph 2 -->
        <p class="text-lg text-neutral-600 font-body leading-relaxed">
          {bioSecondary}
        </p>
      </div>

      <!-- Image Column -->
      <div class="md:col-span-5">
        <div class="relative w-full aspect-[3/4] md:aspect-[4/5] rounded-2xl overflow-hidden shadow-2xl border border-neutral-100 bg-white">
          <img
            src={imageUrl}
            alt={name}
            class="absolute inset-0 w-full h-full object-cover"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-30"></div>
        </div>
      </div>
    </div>
  </div>
</section>

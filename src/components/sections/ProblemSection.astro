---
/**
 * Problem Section - 3 Cards
 * The coordination trap
 */

import type { ProblemCardV2 } from '@/lib/contentful';

export interface Props {
  title: string;
  cards: ProblemCardV2[];
}

const {
  title,
  cards,
} = Astro.props;
---

<section id="problem" class="w-full py-20 px-6 md:px-12 bg-neutral-50 scroll-mt-20">
  <div class="max-w-[1440px] mx-auto">
    <!-- Headline -->
    <h2 class="text-3xl md:text-4xl font-medium text-black mb-12 tracking-tight">
      {title}
    </h2>

    <!-- Cards Grid -->
    <div class="grid md:grid-cols-3 gap-6">
      {cards.map((card) => (
        <div class="bg-white p-8 rounded-xl shadow-sm border border-neutral-100 flex flex-col justify-between h-full hover:border-neutral-300 transition-colors duration-300">
          <div>
            <iconify-icon icon={card.icon} width="32" class="mb-4 text-black"></iconify-icon>
            <h3 class="text-xl font-medium mb-3">{card.title}</h3>
            <p class="text-neutral-500 font-body leading-relaxed text-sm">
              {card.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

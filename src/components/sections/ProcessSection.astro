---
/**
 * Process Section - Week One Timeline
 * Vertical timeline with outcomes
 */

import type { ProcessStepV2 } from '@/lib/contentful';

export interface Props {
  headline: string;
  subheadline: string;
  steps: ProcessStepV2[];
  quote: string;
}

const {
  headline,
  subheadline,
  steps,
  quote,
} = Astro.props;

// Split quote at "Just ownership" for formatting
const [quoteLine1, quoteLine2] = quote.includes('Just ownership')
  ? [quote.split('Just ownership')[0].trim(), 'Just ownership.']
  : [quote, ''];
---

<section id="process" class="w-full py-24 px-6 md:px-12 bg-white border-t border-neutral-100 scroll-mt-20">
  <div class="max-w-4xl mx-auto">
    <!-- Headline -->
    <h2 class="text-3xl md:text-4xl font-medium text-black mb-6 tracking-tight">
      {headline}
    </h2>

    <!-- Subheadline -->
    <p class="text-xl text-neutral-600 font-body leading-relaxed mb-12">
      {subheadline}
    </p>

    <!-- Timeline Steps -->
    <div class="space-y-0">
      {steps.map((step, index) => (
        <div class="flex gap-6">
          <div class="flex flex-col items-center">
            <div class="w-3 h-3 bg-black rounded-full mt-2.5"></div>
            {index < steps.length - 1 && (
              <div class="w-px h-full bg-neutral-200 my-2"></div>
            )}
          </div>
          <div class="pb-6">
            <h3 class="text-lg font-medium text-black mb-2">{step.title}</h3>
            <p class="text-neutral-600 font-body leading-relaxed max-w-2xl">
              {step.description}
            </p>
          </div>
        </div>
      ))}
    </div>

    <!-- Outcomes Box -->
    <div class="bg-neutral-50 border border-neutral-100 rounded-xl p-6 md:p-8 mt-8">
      <h4 class="text-sm font-semibold uppercase tracking-wider text-black mb-4">
        By the end of week one:
      </h4>
      <ul class="grid sm:grid-cols-2 gap-4">
        <li class="flex items-center gap-3 text-sm text-neutral-700 font-medium">
          <iconify-icon icon="solar:check-circle-linear" class="text-black" width="20"></iconify-icon>
          Leadership is no longer the default coordinator
        </li>
        <li class="flex items-center gap-3 text-sm text-neutral-700 font-medium">
          <iconify-icon icon="solar:check-circle-linear" class="text-black" width="20"></iconify-icon>
          Systems have a single accountable owner
        </li>
        <li class="flex items-center gap-3 text-sm text-neutral-700 font-medium">
          <iconify-icon icon="solar:check-circle-linear" class="text-black" width="20"></iconify-icon>
          Risk is identified and contained
        </li>
        <li class="flex items-center gap-3 text-sm text-neutral-700 font-medium">
          <iconify-icon icon="solar:check-circle-linear" class="text-black" width="20"></iconify-icon>
          Direction is clear and execution is underway
        </li>
      </ul>
    </div>

    <!-- Quote Block -->
    <div class="mt-12 text-lg font-medium text-black border-l-2 border-black pl-6 py-1">
      {quoteLine1}
      {quoteLine2 && <><br />{quoteLine2}</>}
    </div>
  </div>
</section>

---
/**
 * Division of Responsibility Section
 * Two-column bordered card
 */

export interface Props {
  headline: string;
  subheadline: string;
}

const {
  headline,
  subheadline,
} = Astro.props;
---

<section class="w-full py-24 px-6 md:px-12 bg-white">
  <div class="max-w-6xl mx-auto">
    <!-- Headline -->
    <h2 class="text-3xl md:text-4xl font-medium text-black mb-4 tracking-tight">
      {headline}
    </h2>

    <!-- Subheadline -->
    <p class="text-xl text-neutral-500 font-light mb-12 max-w-2xl">
      {subheadline}
    </p>

    <!-- Two-column card -->
    <div class="grid md:grid-cols-2 gap-0 border border-neutral-200 rounded-2xl overflow-hidden shadow-sm">
      <!-- Column 1: I Own Operations -->
      <div class="bg-white p-10 md:p-16 border-b md:border-b-0 md:border-r border-neutral-200">
        <!-- Icon -->
        <div class="w-12 h-12 bg-black rounded-full flex items-center justify-center mb-8 text-white">
          <iconify-icon icon="solar:user-id-linear" width="24"></iconify-icon>
        </div>

        <!-- Title -->
        <h3 class="text-2xl font-medium mb-4">I Own Operations</h3>

        <!-- List -->
        <ul class="space-y-4 text-neutral-600 font-body text-sm md:text-base">
          <li class="flex gap-3 items-start">
            <iconify-icon icon="solar:check-read-linear" class="mt-1 text-black shrink-0" width="20"></iconify-icon>
            <span>Platform selection & integration</span>
          </li>
          <li class="flex gap-3 items-start">
            <iconify-icon icon="solar:check-read-linear" class="mt-1 text-black shrink-0" width="20"></iconify-icon>
            <span><strong>Day-to-day execution and technical decisions within agreed priorities</strong></span>
          </li>
          <li class="flex gap-3 items-start">
            <iconify-icon icon="solar:check-read-linear" class="mt-1 text-black shrink-0" width="20"></iconify-icon>
            <span>Social media scheduling & video editing workflows</span>
          </li>
        </ul>
      </div>

      <!-- Column 2: You Own Direction -->
      <div class="bg-neutral-50 p-10 md:p-16">
        <!-- Icon -->
        <div class="w-12 h-12 bg-white border border-neutral-200 rounded-full flex items-center justify-center mb-8 text-black">
          <iconify-icon icon="solar:podium-linear" width="24"></iconify-icon>
        </div>

        <!-- Title -->
        <h3 class="text-2xl font-medium mb-4">You Own Direction</h3>

        <!-- List -->
        <ul class="space-y-4 text-neutral-600 font-body text-sm md:text-base">
          <li class="flex gap-3 items-start">
            <iconify-icon icon="solar:check-read-linear" class="mt-1 text-neutral-400 shrink-0" width="20"></iconify-icon>
            <span>Mission integrity & Vision</span>
          </li>
          <li class="flex gap-3 items-start">
            <iconify-icon icon="solar:check-read-linear" class="mt-1 text-neutral-400 shrink-0" width="20"></iconify-icon>
            <span>Voice, tone, and strategic goals</span>
          </li>
          <li class="flex gap-3 items-start">
            <iconify-icon icon="solar:check-read-linear" class="mt-1 text-neutral-400 shrink-0" width="20"></iconify-icon>
            <span>Review of major milestones, not daily mechanics</span>
          </li>
        </ul>
      </div>
    </div>
  </div>
</section>

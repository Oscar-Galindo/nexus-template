---
/**
 * Trust Logos Section - Online Nexus Marketing
 * 
 * Display client/partner logos
 */

import Container from '@/components/ui/Container.astro';
import Image from '@/components/ui/Image.astro';
import type { Asset } from 'contentful';

export interface Props {
  title?: string;
  logos?: Asset[];
  class?: string;
}

const {
  title = 'Trusted by 500+ Companies',
  logos = [],
  class: className = '',
} = Astro.props;
---

{logos.length > 0 && (
  <section
    class:list={[
      'bg-white py-12 md:py-16 border-t border-neutral-100',
      className
    ]}
  >
    <Container>
      <!-- Title -->
      <p class="text-center text-neutral-500 text-sm uppercase tracking-wider mb-8">
        {title}
      </p>

      <!-- Logos Grid -->
      <div class="flex flex-wrap justify-center items-center gap-8 md:gap-12 lg:gap-16">
        {logos.map((logo) => {
          const logoUrl = logo.fields?.file?.url;
          if (!logoUrl) return null;

          return (
            <Image
              src={`https:${logoUrl}`}
              alt={logo.fields?.title || 'Partner logo'}
              preset="logo"
              height={40}
              class="h-8 md:h-10 w-auto grayscale opacity-60 hover:grayscale-0 hover:opacity-100 transition-all duration-300"
            />
          );
        })}
      </div>
    </Container>
  </section>
)}
